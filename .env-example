# Bot Configuration
BOT_TOKEN=your_telegram_bot_token_here               # Get from BotFather on Telegram
WEBHOOK_URL=your_webhook_url_here                    # Your deployment URL + /webhook
PORT=3000                                             # Port for webhook server

# AI Integration
SIMBI_GROQ_API=your_groq_api_key_here                # Groq API key for AI chat capabilities

# Blockchain Configuration
BASE_SEPOLIA_RPC_URL=your_base_sepolia_rpc_url_here  # RPC URL for Base Sepolia network
PRIVATE_KEY=your_wallet_private_key_here             # Private key for contract interactions

# Contract Addresses
SIMBIQUIZMANAGER_CA=your_quiz_manager_contract_address_here      # SimbiQuizManager contract address
SIMBI_CONTRACT_ADDRESS=your_token_contract_address_here          # SimbiToken contract address
SIMBIBADGE_NFT_CA=your_badge_nft_contract_address_here           # SimbiBadgeNFT contract address
SIMBI_CREDENTIAL_NFT=your_credential_nft_contract_address_here   # SimbiCredentialNFT contract address

# Security Configuration
ENCRYPTION_KEY=32_character_encryption_key_here      # 32-character key for wallet encryption

# Database Configuration (Optional)
DATABASE_URL=postgres://username:password@hostname:port/database  # PostgreSQL connection string
MIGRATE_FROM_JSON=false                                        # Set to 'true' to migrate users from JSON file to database on startup 